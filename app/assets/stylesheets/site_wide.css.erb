/* TOOL BAR
***************/


#toolBar hgroup {}
#toolBar hgroup h2 {font-size:13px;}
#toolBar nav {background-color:#EAECEF; width:119px;box-shadow: 0 1px 4px rgba(0, 0, 0, 0.15); }
#toolBar nav a {display:block; height:50px; border-bottom:1px solid #fff; box-shadow: 0 1px 4px rgba(0, 0, 0, 0.15); }

#toolBar{
    width: 190px;
    font-size: 12px;
    line-height: 20px;
    left: -260px;
    top: 25%; 
    float:left;
    z-index: 100;
    display:inline-block;
    margin-right:20px;
    height:100%;

}
#arrow, .bt{cursor: pointer;}
#tab1{
    float: right;
    list-style: none outside none;
    margin: 50px 0 0 0;
    padding: 5px 5px 5px 0;
    position: relative;
    z-index: 99;
    background-color: #bcc0c4;
    -webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	border-top-left-radius:0;
	border-bottom-left-radius:0;
	}
#tab1 li {
	border:1px solid white; 
	padding:7px;  
    -webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background-color:#F3F3F3;
	border-left:none;
	border-top-left-radius:0;
	border-bottom-left-radius:0;




}

#tab1 li span{
    display: block;
    padding: 0 5px;
    position: relative;
}


.show, .hide{
   
            transition: margin-left .4s ease-in;
    -webkit-transition: margin-left .4s ease-in;
}

.hide{
    margin-left:-123px;
}

.show{
    margin-left:0px;
}

