#text-fade-container {width:600px; margin:0 auto;}
/* TOOL BAR
***************/


#toolBar hgroup {}
#toolBar hgroup h2 {font-size:13px;}
#toolBar nav {background-color:#EAECEF; width:119px;box-shadow: 0 1px 4px rgba(0, 0, 0, 0.15); }
#toolBar nav a {display:block; height:50px; border-bottom:1px solid #fff; box-shadow: 0 1px 4px rgba(0, 0, 0, 0.15); }

#toolsNav hgroup {padding: 10px 7px;}

#toolBar{
    width: 189px;
    font-size: 12px;
    line-height: 20px;
    left: -260px;
    top: 25%; 
    float:left;
    z-index: 100;
    display:inline-block;
  
    height:100%;

}
#arrow, .bt, #arrow2{cursor: pointer;}
#tab1, #tab2{
    
    list-style: none outside none;
    margin: 50px 0 0 0;
    padding: 5px 5px 5px 0;
    position: relative;
    z-index: 49;
    background-color: #bcc0c4;
    -webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	border-top-left-radius:0;
	border-bottom-left-radius:0;
    width: 65px;
	}
#tab2{margin:5px 0 0 0;}
#tab1 li, #tab2 li {
	border:1px solid white; 
	padding:7px;  
    -webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background-color:#F3F3F3;
	border-left:none;
	border-top-left-radius:0;
	border-bottom-left-radius:0;




}

#tab1 li span, #tab2 li span{
    display: block;
    padding: 0 5px;
    position: relative;
}

.show{
   
            transition: margin-left .4s ease-in;
    -webkit-transition: margin-left .4s ease-in;
}

.hide{
    margin-left:-123px !important;
   margin-right:-65px;

}

.show{
    margin-left:0px;
    margin-right:-191px;
    
}




