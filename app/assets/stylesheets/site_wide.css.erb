/* FONTS
**************/
@font-face {
    font-family: 'banda';
    src: url(<%= asset_path('typedepot_-_bandaregular-webfont.eot') %>);
    src: url(<%= asset_path('typedepot_-_bandaregular-webfont.eot?#iefix') %>) format('embedded-opentype'),
         url(<%= asset_path('typedepot_-_bandaregular-webfont.woff') %>) format('woff'),
         url(<%= asset_path('typedepot_-_bandaregular-webfont.ttf') %>) format('truetype'),
         url(<%= asset_path('typedepot_-_bandaregular-webfont.svg#banda_regularregular') %>) format('svg');
    font-weight: normal;
    font-style: normal;

}



