<div id="choose_video_modal" class="modal hide fade" tabindex="-1" data-focus-on="input:first" style="display: none">
  <div class="modal-body">
    <input type="text" class="youtube_url_input" placeholder="Input video url here">
    <%= link_to "Submit", "#", class: "input_youtube_url_submit" %>
    <br/>- or - <br/>
    <input type="text" class="youtube_search" placeholder="Search for videos here">
    <div class="search_results">
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn">Close</button>
  </div>
</div>


<div id="choose_privacy" class="modal hide fade" tabindex="-1" data-focus-on="input:first">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Privacy Options</h3>
  </div>
  <div class="modal-body">
    <%= form_tag videos_path, method: :post, class: "video_form" do %>
      <%= hidden_field_tag :youtube_id %>
      <%= hidden_field_tag :private %>
      <%= hidden_field_tag :description %>
      <%= hidden_field_tag :category %>
      <%= hidden_field_tag :title %>
    <% end %>

    Do you want this video to be:<br/>
    <%= link_to "Public", "#", class: "public_video_link" %>
    - or -
    <%= link_to "Private", "#", class: "private_video_link" %>
  </div>
</div>