<div id="user_login_modal" class="modal hide fade" tabindex="-1" data-focus-on="input:first" style="display: none">
	<div class="modal-body">

		<% if !current_user %>
			<%= form_tag create_guest_user_path, method: :put do %>
				<br>
				<%= text_field_tag :username %>
				<br>
				<%= submit_tag "Submit" %>
				<br>
				<%= link_to "Sign in with Twitter", "/users/auth/twitter" %><br/>
				<%= link_to "Sign in with Github", "/users/auth/github" %><br/>
				<%= link_to "Sign in with Facebook", "/users/auth/facebook" %><br/>
			<% end %>
		<% elsif current_user && current_user.guest_user %>
			Currently signed in as Guest: <%= current_user.username %>
			<br>
			<%= link_to "Link your Twitter account", "/users/auth/twitter" %><br/>
			<%= link_to "Link your Github account", "/users/auth/github" %><br/>
			<%= link_to "Link your Facebook account", "/users/auth/facebook" %><br/>
		<% end %>

	</div>
</div>